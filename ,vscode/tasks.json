// 2023-08-17 adapt veins_launchd command
//            add `make cleanall` task
//            add `make makefiles` task
//            change dependency of task `build all` from `run configure` to `run make makefiles`

{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run configure",
            "type": "shell",
            "command": "./configure",
            "args": [
                "-v"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            }
        },
        {
            "label": "run make makefiles",
            "type": "shell",
            "command": "make makefiles",
            "args": [],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "recreate compile database",
            "type": "shell",
            "dependsOn": [
                "run make clean"
            ],
            "command": "bear",
            "args": [
                "--",
                "make",
                "all",
                "-j$(nproc)",
                "MODE=debug"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "build all",
            "type": "shell",
            "dependsOn": [
                "run make makefiles"
            ],
            "command": "bear",
            "args": [
                "--append",
                "--",
                "make",
                "all",
                "-j$(nproc)"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "run make clean",
            "type": "shell",
            "command": "make clean",
            "args": [],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "run make cleanall",
            "type": "shell",
            "command": "make cleanall",
            "args": [],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "run veins_launchd",
            "type": "shell",
            "command": "./lib/veins/bin/veins_launchd",
            "args": [
                "-vvv"
            ],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            }
        }
    ]
}